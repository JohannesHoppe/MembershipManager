<Window x:Class="MembershipManager.RoleWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Role Detail" SizeToContent="WidthAndHeight" Margin="0,0,0,0">
    <Grid Margin="10,10,10,10">
        <Label Content="Name:" HorizontalAlignment="Left" Margin="0,-4,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="txtName" HorizontalAlignment="Left" Height="23" Margin="49,0,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="223"/>
        <Button x:Name="btnSave" Content="Save" HorizontalAlignment="Left" Margin="197,28,0,0" VerticalAlignment="Top" Width="75" Click="btnSave_Click"/>
        <Button x:Name="btnDelete" Content="Delete" HorizontalAlignment="Left" VerticalAlignment="Top" Width="75" Margin="0,28,0,0" Click="btnDelete_Click"/>
    </Grid>
</Window>
