<Window x:Class="MembershipManager.RoleWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Role Detail" Height="100" Width="300">
    <Grid>
        <Label Content="Name:" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="txtName" HorizontalAlignment="Left" Height="23" Margin="59,14,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="223"/>
        <Button x:Name="btnSave" Content="Save" HorizontalAlignment="Left" Margin="207,42,0,0" VerticalAlignment="Top" Width="75" Click="btnSave_Click"/>
        <Button x:Name="btnDelete" Content="Delete" HorizontalAlignment="Left" VerticalAlignment="Top" Width="75" Margin="10,42,0,0" Click="btnDelete_Click"/>
    </Grid>
</Window>
