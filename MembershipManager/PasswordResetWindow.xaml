<Window x:Class="MembershipManager.PasswordResetWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MembershipManager" SizeToContent="WidthAndHeight">
    <Grid Margin="10,10,10,10">
        <TextBlock HorizontalAlignment="Left" TextWrapping="Wrap" Text="The user's password has been reset successfully.  The new password is below." VerticalAlignment="Top" Height="40" Width="272"/>
        <TextBox x:Name="txtPassword" HorizontalAlignment="Left" Height="23" Margin="0,45,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="272"/>
        <Button x:Name="btnOK" Content="OK" HorizontalAlignment="Left" Margin="100,73,0,0" VerticalAlignment="Top" Width="75" Click="btnOK_Click"/>
    </Grid>
</Window>
